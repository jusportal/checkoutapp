<div class="min-h-screen bg-gray-50 py-8">
  <!-- Header -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Orders for <%= @cart.customer_name %></h1>
      </div>
      <div class="flex space-x-3">
        <%= link_to "Admin", admin_products_path,
            class: "bg-white text-violet-600 py-2 px-4 rounded-md border border-violet-600" %>

        <%= link_to "New Cart", new_cart_path,
            class: "bg-violet-600 text-white py-2 px-4 rounded-md hover:bg-violet-700 focus:outline-none focus:ring-2 focus:ring-violet-500 focus:ring-offset-2 transition-colors" %>
      </div>
    </div>
  </div>

  <!-- Main Content Grid -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 xl:grid-cols-2 gap-8">
      <!-- Products Section -->
      <div class="bg-white rounded-lg shadow-lg p-6">
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-2xl font-bold text-gray-900">Products</h2>
        </div>

        <div class="space-y-4">
          <% Product.all.each do |product| %>
            <div class="rounded-lg p-4 hover:shadow-md transition-shadow border border-gray-100">
              <div class="flex items-center justify-between">
                <div class="flex-1">
                  <h3 class="text-lg font-semibold text-gray-900"><%= product.name %></h3>
                  <p class="text-sm text-gray-600">Code: <%= product.code %></p>
                  <p class="text-lg font-bold text-violet-600 mt-2">
                    $<%= number_with_precision(product.price_micros / 1_000_000.0, precision: 2) %>
                  </p>
                </div>
                <div class="ml-4">
                  <%= button_to "Add to Cart",
                      cart_orders_path(@cart),
                      method: :post,
                      params: { order: { product_id: product.id, cart_id: @cart.id, price_micros: product.price_micros } },
                      class: "bg-violet-600 text-white px-4 py-2 rounded-md hover:bg-violet-700 focus:outline-none focus:ring-2 focus:ring-violet-500 focus:ring-offset-2 transition-colors text-sm"
                     %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Cart Orders Section -->
      <div class="bg-white rounded-lg shadow-lg p-6">
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-2xl font-bold text-gray-900">Cart Orders</h2>
          <span class="bg-green-100 text-green-800 text-sm font-medium px-3 py-1 rounded-full">
            <%= @cart.orders.count %> items
          </span>
        </div>

        <% if @cart.orders.any? %>
          <div class="space-y-4">
            <% @cart.orders.order_by_promo_name.includes(:product).each do |order| %>
              <div class="rounded-lg p-4 border border-gray-100">
                <div class="flex items-center justify-between">
                  <div class="flex-1">
                    <h3 class="text-lg font-semibold text-gray-900"><%= order.product.name %> (<%= order.product.code %>)</h3>
                    <% total_discount = order.product.price_micros - order.price_micros %>
                    <% if total_discount > 0 %>
                      <p class="text-sm text-gray-600">Discount: $<%= number_with_precision((order.product.price_micros - order.price_micros) / 1_000_000.0, precision: 2) %></p>
                      <p class="text-sm text-gray-600">Promo: <%=  order.promo_name %></p>
                    <% end %>
                    <p class="text-lg font-bold text-violet-600 mt-2">
                      $<%= number_with_precision(order.price_micros / 1_000_000.0, precision: 2) %>
                    </p>
                  </div>
                  <div class="ml-4">
                    <%= button_to "Remove",
                        cart_order_path(@cart, order),
                        method: :delete,
                        class: "bg-red-600 text-white px-3 py-2 rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-colors text-sm",
                        data: { turbo: false, confirm: "Are you sure you want to remove this item?" } %>
                  </div>
                </div>
              </div>
            <% end %>

            <!-- Total Section -->
            <div class="border-t border-gray-200 pt-4 mt-6">
              <div class="flex justify-between items-center">
                <span class="text-xl font-bold text-gray-900">Total:</span>
                <span class="text-2xl font-bold text-violet-600">
                  $<%= number_with_precision(@cart.orders.sum(:price_micros) / 1_000_000.0, precision: 2) %>
                </span>
              </div>
            </div>
          </div>
        <% else %>
          <div class="text-center py-12">
            <div class="text-gray-400 mb-4">
              <svg class="mx-auto h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
              </svg>
            </div>
            <h3 class="text-lg font-medium text-gray-900 mb-2">No items in cart</h3>
            <p class="text-gray-500">Add some products from the left to get started!</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
